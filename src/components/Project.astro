---
import { Image } from "astro:assets";
import type { ProjectType } from "../consts";

interface Props {
  project: ProjectType;
}
const { project } = Astro.props;
---

<div class="group relative rounded-md">
  <a href={project.deployedUrl} target="_blank" class="flex space-x-4">
    <div class="pt-2">
      <Image
        src={project.image}
        alt={project.desc}
        height={384}
        width={216}
        class={"rounded border-2 border-slate-500/30"}
      />
    </div>

    <div class="space-y-2">
      <div class="flex items-center justify-between">
        <span class="text-lg group-hover:text-slate-100">{project.name}</span>

        <!-- Arrow Icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1"
          stroke="currentColor"
          width="18"
          height="18"
          class="group-hover:stroke-blue-500 group-hover:-mt-1 duration-200 mr-8"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
          ></path>
        </svg>
        <span
          class="absolute -z-10 -inset-x-4 -inset-y-2 group-hover:bg-slate-50/10 rounded-md duration-300"
        ></span>
      </div>

      <p class="text-sm">{project.desc}</p>
      <ul class="flex flex-wrap gap-2">
        {
          project.tech.map((item) => (
            <li class="px-2 text-sm bg-slate-500 text-slate-50 whitespace-nowrap rounded">
              {item}
            </li>
          ))
        }
      </ul>
    </div>
  </a>
  <!-- Github Icon -->
  <a href={project.githubUrl} target="_blank" class="absolute right-0 top-1.5">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="18"
      height="18"
      fill="currentColor"
      class="hover:fill-blue-500 hover:-mt-1 duration-200"
      viewBox="0 0 16 16"
    >
      <path
        d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
      ></path>
    </svg>
  </a>
</div>
