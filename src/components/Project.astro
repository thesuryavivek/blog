---
import { Image } from "astro:assets";
import type { ProjectType } from "../consts";

interface Props {
  project: ProjectType;
}
const { project } = Astro.props;
---

<div
  class="rounded-md flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-4"
>
  <div class="md:pt-2 md:w-1/3 sm:w-1/2">
    <a href={project.deployedUrl} target="_blank">
      <Image
        src={project.image}
        alt={project.desc}
        class={"rounded border-2 border-slate-500/30"}
      />
    </a>
  </div>

  <div class="space-y-2 px-2 md:px-0">
    <div class="flex space-x-2 items-center justify-between">
      <a
        href={project.deployedUrl}
        target="_blank"
        class="flex items-center space-x-2 group"
      >
        <span
          class="text-lg text-slate-100 group-hover:underline underline-offset-4"
          >{project.name}</span
        >

        <!-- Arrow Icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1"
          stroke="currentColor"
          height="18"
          width="18"
          class="group-hover:translate-x-0.5 group-hover:-translate-y-0.5 duration-200"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"></path>
        </svg>
      </a>
      <!-- Github Icon -->
      <a href={project.githubUrl} target="_blank" class="">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          fill="currentColor"
          class="hover:-mt-1 hover:fill-slate-100 duration-200"
          viewBox="0 0 16 16"
        >
          <path
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path>
        </svg>
      </a>
    </div>

    <p class="text-sm">{project.desc}</p>
    <ul class="flex flex-wrap gap-2">
      {
        project.tech.map((item) => (
          <li class="px-2 text-sm bg-slate-500 text-slate-50 whitespace-nowrap rounded">
            {item}
          </li>
        ))
      }
    </ul>
  </div>
</div>
